{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rubric_response.v1.json",
  "title": "RubricResponseV1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "band": { 
      "type": "number", 
      "minimum": 0, 
      "maximum": 9, 
      "multipleOf": 0.5 
    },
    "evidence_quotes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1, "maxLength": 300 },
      "minItems": 0,
      "maxItems": 3
    },
    "errors": {
      "type": "array",
      "minItems": 0,
      "maxItems": 10,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "span": { "type": "string", "minLength": 1, "maxLength": 300 },
          "type": {
            "type": "string",
            "enum": ["grammar", "lexical", "coherence", "task", "other"]
          },
          "fix": { "type": "string", "minLength": 1, "maxLength": 500 }
        },
        "required": ["span", "type", "fix"]
      }
    },
    "suggestions": {
      "type": "array",
      "minItems": 0,
      "maxItems": 5,
      "items": { "type": "string", "minLength": 1, "maxLength": 400 }
    }
  },
  "required": ["band", "evidence_quotes", "errors", "suggestions"]
}