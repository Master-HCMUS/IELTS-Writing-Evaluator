{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "score_response.v1.json",
  "title": "ScoreResponseV1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "per_criterion": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "band": { "type": "number", "minimum": 0, "maximum": 9, "multipleOf": 0.5 },
          "evidence_quotes": {
            "type": "array",
            "items": { "type": "string", "minLength": 1, "maxLength": 1000 },
            "minItems": 0,
            "maxItems": 3
          },
          "errors": {
            "type": "array",
            "minItems": 0,
            "maxItems": 10,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "span": { "type": "string", "minLength": 1, "maxLength": 1000 },
                "type": {
                  "type": "string",
                  "enum": ["grammar", "lexical", "coherence", "task", "other"]
                },
                "fix": { "type": "string", "minLength": 1, "maxLength": 1000 }
              },
              "required": ["span", "type", "fix"]
            }
          },
          "suggestions": {
            "type": "array",
            "minItems": 0,
            "maxItems": 5,
            "items": { "type": "string", "minLength": 1, "maxLength": 1000 }
          }
        },
        "required": ["name", "band", "evidence_quotes", "errors", "suggestions"]
      }
    },
    "overall": { "type": "number", "minimum": 0, "maximum": 9, "multipleOf": 0.5 },
    "votes": {
      "type": "array",
      "items": { "type": "number", "minimum": 0, "maximum": 9, "multipleOf": 0.5 },
      "minItems": 1,
      "maxItems": 3
    },
    "dispersion": { "type": "number", "minimum": 0, "maximum": 9 },
    "confidence": { "type": "string", "enum": ["high", "low"] },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "prompt_hash": { "type": "string" },
        "model": { "type": "string" },
        "schema_version": { "type": "string", "const": "v1" },
        "rubric_version": { "type": "string" },
        "token_usage": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": { "type": "integer", "minimum": 0 },
            "output_tokens": { "type": "integer", "minimum": 0 }
          },
          "required": ["input_tokens", "output_tokens"]
        }
      },
      "required": ["prompt_hash", "model", "schema_version", "rubric_version", "token_usage"]
    }
  },
  "required": ["per_criterion", "overall", "votes", "dispersion", "confidence", "meta"]
}
